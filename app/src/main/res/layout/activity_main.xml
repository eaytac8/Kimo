<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:columnCount="2"


    tools:context="com.example.eaytac.kimo_v1.MainActivity">


    <VideoView
        android:id="@+id/videoOynat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


    </VideoView>

    <Button
        android:id="@+id/kapat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="5dp"
        android:background="#ebf03030"
        android:rotation="90"
        android:text="@string/kapat_button"
        android:textColor="@android:color/background_light"
        android:textSize="22sp"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/devam_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/holo_green_light"
        android:rotation="90"
        android:text="@string/devam_button"
        android:textColor="@android:color/background_light"
        android:textSize="22sp" />


</FrameLayout>
